<!--pages/profile/profile.wxml-->
<view class="w-proflie">
  <!-- 登录信息 -->
  <view class="user-info">
    <view class="login-info">
      <image src="/assets/img/profile/avatar.png" class="user-avator"/>
      <view class="login-resigter">
        <view class="login-btn" bindtap="login">{{userName}}</view>
        <view class="phone-info">
          <image class="icon-phone" src="/assets/img/profile/phone.png" />
          <text class="icon-phone">暂无绑定手机号</text>
        </view>
      </view>
      <view class="right">
        <image src="/assets/img/common/arrow-right.png" class="right-arrow" />
      </view>
    </view>
    <!-- 用户 利益 信息 -->
    <view class="intersests">
      <view class="inter-box user-money">
        <view class="money">
          <text class="nums">0.00</text>
          <text class="text">元</text>
        </view>
        <view class="title">
          <text class="title-text">我的余额</text>
        </view>
      </view>
      <view class="inter-box user-card">
        <view class="money">
          <text class="nums">0</text>
          <text class="text">个</text>
        </view>
        <view class="title">
          <text class="title-text">我的优惠</text>
        </view>
      </view>
      <view class="inter-box user-score">
        <view class="money">
          <text class="nums">0</text>
          <text class="text">分</text>
        </view>
        <view class="title">
          <text class="title-text">我的积分</text>
        </view>
      </view>
    </view>
  </view>
  <!-- 用户信息 -->
  <view class="message">
    <view class="user-msg">
      <image class="img messages" src="/assets/img/profile/message.png" />
      <text>我的消息</text>
    </view>
    <view class="user-msg">
      <image class="img pointer" src="/assets/img/profile/pointer.png" />
      <text>积分商城</text>
    </view>
    <view class="user-msg">
     <image class="img vip" src="/assets/img/profile/vip.png" />
      <text>会员卡</text>
    </view>
  </view>
  <!-- 关于App -->
  <view class="about-app">
    <view class="user-msg">
      <image class="img cart" src="/assets/img/profile/cart.png" />
      <text>我的购物车</text>
    </view>
    <view class="user-msg">
      <image class="img app" src="/assets/img/profile/app.png" />
      <text>下载购物APP</text>
    </view>
  </view>
</view>
