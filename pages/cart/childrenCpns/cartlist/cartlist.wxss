/* pages/cart/childrenCpns/cartlist/cartlist.wxss */
.cart-list {

}
.cart-list .item-lits {
  border-bottom: 4rpx solid #eee;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.cart-list .item-lits > view {
  text-align: center;
}
.cart-list .item-lits .checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #fff;
  color: #fff;
  font-size: 28rpx;
}
.cart-list .item-lits .checked {
  background-color: #ff5777;
}
.cart-list .item-lits .goods-img {
  width: 160rpx;
  height: 240rpx;
  border-radius: 20rpx;
}
.cart-list .item-lits .goods-img .img {
  width: 100%;
  border-radius: 20rpx;
}
.cart-list .item-lits .goods-info {
  width: 50%;
  line-height: 60rpx;
}
.cart-list .item-lits .goods-info .title,
.cart-list .item-lits .goods-info .desc {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: left;
  font-size: 24rpx;
}
.cart-list .item-lits .goods-info .count-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}