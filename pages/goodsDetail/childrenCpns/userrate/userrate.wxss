/* pages/goodsDetail/childrenCpns/userrate/userrate.wxss */
.user-rate {
  padding-bottom: 40rpx;
  border-bottom: 12rpx solid #eee;
}
.user-rate .top {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
}
.user-rate .top .user-avator {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.user-rate .top .user-name {
  font-size: 28rpx;
  color: #666;
}
.user-rate .center,
.user-rate .footer {
  padding: 0 30rpx;
}
.user-rate .center .user-info,
.user-rate .footer .user-info{
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.user-rate .center .user-info text,
.user-rate .footer .user-info text {
  margin-right: 10rpx;
  color: #666;
}
.user-rate .center .text-info {
  font-size: 26rpx;
  color: #666;
  text-indent: 20rpx;
  margin-bottom: 30rpx;
}
.user-rate .footer .user-images .goods-img {
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
}
